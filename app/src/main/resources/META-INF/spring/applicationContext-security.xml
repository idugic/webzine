<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security" xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

  <global-method-security pre-post-annotations="enabled" mode="aspectj" />

  <!-- HTTP security configurations -->
  <http auto-config="true" use-expressions="true">
    <form-login login-processing-url="/resources/j_spring_security_check" login-page="/login" authentication-failure-url="/login?login_error=t" />
    <logout logout-url="/resources/j_spring_security_logout" />
    <intercept-url pattern="/admin/system/**" access="hasAnyRole('administrator', 'editor-00')" />
    <intercept-url pattern="/admin/project_management/**" access="hasAnyRole('administrator', 'editor-00', 'editor-01')" />
    <intercept-url pattern="/admin/content_management/**" access="hasRole('administrator')" />
    <intercept-url pattern="/admin/magazine/**" access="hasAnyRole('administrator', 'editor-00', 'editor-01')" />
    <intercept-url pattern="/admin/customer_care/**" access="hasAnyRole('administrator', 'editor-00')" />
    <intercept-url pattern="/resources/**" access="permitAll" />
    <intercept-url pattern="/**" access="permitAll" />
  </http>

  <!-- Configure Authentication mechanism -->
  <authentication-manager alias="authenticationManager">
    <!-- SHA-256 values can be produced using 'echo -n your_desired_password | sha256sum' (using normal *nix environments) -->
    <authentication-provider>
      <!-- <password-encoder hash="sha-256" /> -->
      <user-service>
        <!-- <user name="admin" password="8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918" authorities="R0" /> -->
        <user name="admin" password="admin" authorities="administrator" />
        <user name="editor" password="editor" authorities="editor-00" />
        <user name="user" password="user" authorities="editor-01" />
        <user name="visitor" password="visitor" authorities="visitor" />
      </user-service>
    </authentication-provider>
  </authentication-manager>
</beans:beans>